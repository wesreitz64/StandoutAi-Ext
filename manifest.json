{
    "manifest_version": 3,
    "name": "Floating Sidebar Extension",
    "version": "1.0",
    "description": "Adds a floating button that opens a website in a right sidebar.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["sidebar.html"],
        "matches": ["<all_urls>"]
    }]
}